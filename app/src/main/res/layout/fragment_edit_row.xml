<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_horizontal"
    android:paddingRight="@dimen/margin_horizontal"
    tools:context="eulerityip.base.com.eulerityimageprocessing.fragments.ImageEditFragment">

    <TextView
        android:id="@+id/filter_type_text_view"
        android:layout_width="@dimen/lbl_edit_image_control"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/lbl_brightness" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_10"
        android:paddingTop="@dimen/padding_10">
        <ImageView
            android:id="@+id/left_image_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:background="@drawable/ic_is_less_than"/>

        <ImageView
            android:id="@+id/filter_type_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_brightness"/>

        <SeekBar
            android:id="@+id/filter_type_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/right_image_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:background="@drawable/ic_is_greater_than" />
    </LinearLayout>
</LinearLayout>